<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/post_comment_item_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.beardedhen.androidbootstrap.BootstrapCircleThumbnail
        android:id="@+id/avatar"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@mipmap/ic_launcher"
        app:bootstrapBrand="info"
        app:hasBorder="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/comment_author"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:text="XXXX"
                android:layout_marginTop="5dp"
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/comment_time"
                android:layout_width="wrap_content"
                android:text="xx:xx"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/comment_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:text="我有好几次看见韩信快死了冲过去救他，结果死了，不知道韩信会不会举报我（—_—）"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/parent_comment_container"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#66eeeeee"
            android:padding="2dp"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/parent_comment_author"
                android:layout_width="wrap_content"
                android:text="XXXX"
                android:textColor="#58B2DC"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text=":"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/parent_comment_content"
                android:text="你好啊"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>