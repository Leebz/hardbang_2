<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/post_detail_layout_bottom_bar_background"
    tools:showIn="@layout/activity_post_detail">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/i_want_join"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:text="我要报名"
            android:layout_gravity="center"
            app:bootstrapBrand="success"
            app:bootstrapSize="lg"
            app:buttonMode="regular"
            app:showOutline="false"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapDropDown
            android:layout_width="wrap_content"
            android:id="@+id/more_action_drop_down"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:bootstrapText="..."
            app:bootstrapBrand="success"
            app:roundedCorners="true"
            app:bootstrapSize="lg"
            app:dropdownResource="@array/post_action_dropdown_data"
            app:bootstrapExpandDirection="up"/>

    </LinearLayout>

</LinearLayout>