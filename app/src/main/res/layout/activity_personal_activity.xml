<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sukaiyi.hardbang.activity_personal_activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <com.beardedhen.androidbootstrap.AwesomeTextView
                style="@android:style/TextAppearance.DeviceDefault.Large"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                app:bootstrapBrand="success"
                app:bootstrapText="{fa_angle_right}"
                app:fontAwesomeIcon="fa_android"
                app:typicon="ty_anchor" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="@string/my_activity"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/personal_list">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/personal_post_time"
                    android:text="time"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/personal_post_title"
                    android:text="标题"
                    android:maxLines="2"
                    style="@android:style/TextAppearance.DeviceDefault.Large"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <com.sukaiyi.hardbang.view.UnClickableMarkdownView
                android:id="@+id/personal_post_item_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/personal_come_from_organization"
                android:text="来自:null"
                android:gravity="right"
                android:maxLines="1"

                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>
